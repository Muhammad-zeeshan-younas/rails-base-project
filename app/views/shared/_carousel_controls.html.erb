<div class="absolute z-30 flex space-x-3 -translate-x-1/2 bottom-5 left-1/2">
  <% images.each_with_index do |_, index| %>
  <button type="button" class="w-3 h-3 rounded-full" aria-current="<%= index.zero? ? 'true' : 'false' %>" aria-label="Slide <%= index + 1 %>" data-carousel-slide-to="<%= index %>" data-carousel-target="indicators"></button>
  <% end %>
</div>
<button type="button" class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-target="prevButton" data-action="click->carousel#previous">
  <span class="inline-flex items-center justify-center w-max p-2 rounded-full bg-white/90 group-hover:bg-white/50 group-focus:ring-white group-focus:outline-none transition-all duration-300">
    <svg class="w-3 h-3 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
    </svg>
    <span class="sr-only">Previous</span>
  </span>
</button>
<button type="button" class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-target="nextButton" data-action="click->carousel#next">
  <span class="inline-flex items-center justify-center w-max p-2 rounded-full bg-white/90 group-hover:bg-white/50 group-focus:ring-white group-focus:outline-none transition-all duration-300">
    <svg class="w-3 h-3 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
    </svg>
    <span class="sr-only">Next</span>
  </span>
</button>