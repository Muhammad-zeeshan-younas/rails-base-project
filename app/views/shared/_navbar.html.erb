<header>
  <nav>
    <div class="flex justify-between items-center lg:justify-around p-5">
      <div class="flex gap-10 items-center">
        <a href="/" class="font-bold text-2xl uppercase" aria-label="AZ Studio">
          AZ Merch
        </a>
      </div>
      <div class="hidden lg:flex gap-5 text-lg font-smibold items-center">
         <button class="relative group">
           <%= heroicon "magnifying-glass", options: { class: "w-5 h-5" } %>
          <span class="absolute bg-gray-200 -left-6 -bottom-8 py-1 px-2 rounded-md opacity-0 group-hover:opacity-100 transition-all duration-200 text-sm">Search</span>
        </button>
        <a href="/" class="hover:bg-gray-200 p-2 rounded-[10px]">Home</a>
        <a href="/products" class="hover:bg-gray-200 p-2 rounded-[10px]">Products</a>
        <a href="/contact" class="hover:bg-gray-200 p-2 rounded-[10px]">Contact</a>
      </div>
      <div class="flex gap-5">
        <button class="relative group">
          <%= heroicon "shopping-cart", variant: :outline, options: { class: "w-6 h-6" } %>
          <span class="absolute bg-gray-200 -left-2 -bottom-8 py-1 px-2 rounded-md opacity-0 group-hover:opacity-100 transition-all duration-200 text-xs">Cart</span>
        </button>
        <button
          data-modal-path="/sidebar"
          data-controller="modal"
          data-modal-target="button"
          data-action="click->modal#openModal"
          class="focus:outline-none lg:hidden">
          <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
            <path
              d="M4 6h16M4 12h16M4 18h16"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              />
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>