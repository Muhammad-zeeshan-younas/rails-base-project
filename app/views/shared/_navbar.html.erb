<header>
  <nav>
    <div class="flex justify-between items-center lg:justify-around p-5">
      <div class="flex gap-10 items-center">
        <a href="/" class="font-bold text-2xl uppercase" aria-label="AZ Studio">
          AZ Merch
        </a>
      </div>
      <div class="hidden lg:flex gap-5 text-lg font-smibold items-center">
        <%= heroicon "magnifying-glass", options: { class: "w-5 h-5" } %>
        <a href="/" class="hover:text-blue-200">Home</a>
        <a href="/products" class="hover:text-blue-200">Products</a>
        <a href="/contact" class="hover:text-blue-200">Contact</a>
