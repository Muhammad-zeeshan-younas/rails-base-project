<div class="container">
  <h1>Dashboard</h1>

  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Total Orders</h5>
          <p class="card-text"><%= @total_orders %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Total Revenue</h5>
          <p class="card-text"><%= number_to_currency(@total_revenue) %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Total Customers</h5>
          <p class="card-text"><%= @total_customers %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Add other dashboard components here -->

</div>
